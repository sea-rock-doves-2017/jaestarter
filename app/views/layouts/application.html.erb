<!DOCTYPE html>
<html>
  <head>
    <title>JaeStarter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>JaeStarter</h1>
    <p>
      <% if logged_in? %>
        Welcome, <%= link_to current_user.name, current_user %>
      <% else %>
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
