<h1>Active Projects</h1>

<% @projects.each do |project| %>
  <div class='project'>
    <h3><%= project.title %></h3>
    <h5><%= project.percent_funded %>% of <%= project.goal_amount %> donated</h5>
    <h5>Time remaining to fund this project: <%= project.remaining_time %></h5>
    <p>
      <%= project.description %>
    </p>
  </div>
<% end %>
